<div class="answer-display">
  <p>Answer by: {{answer.author}}</p>
  <p>{{answer.content}}</p>

  {{#if updateAnswerForm}}
    <h4>Update {{answer.author}}'s answer</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" placeholder=answer.author}}
        </div>

        <div class="form-group">
          <label for="rating">Rating</label>
          {{input value=rating id="rating" placeholder=answer.rating}}
        </div>

        <div class="form-group">
          <label for="content">Content</label>
          {{input value=content id="content" placeholder=answer.content}}
        </div>

        <button class="btn" {{action 'updateAnswer' answer}}>Save</button>
      </form>
    </div>
  {{else}}
    <button class="btn" {{action 'updateAnswerForm'}}>Update Answer</button>
  {{/if}}

<button class="btn" {{action 'delete' answer}}>Delete Answer</button>
</div>
