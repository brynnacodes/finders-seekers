<h1>Ask a new question:</h1>
<div>
  <form>
    <div class="form-group">
      <label for="author">Author</label><br>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="title">Title</label><br>
      {{input value=title id="title"}}
    </div>

    <div class="form-group">
      <label for="content">Body</label><br>
      {{textarea value=content id="content" cols="80" rows="6"}}
    </div>

    <button class="btn" {{action 'saveQuestion1'}}>Save</button>
  </form>
</div>
